<!DOCTYPE html>
<html>
  <head>

    <% if current_user %>
      <%= render 'shared/accounthead' %>
    <% else %>
      <%= render 'shared/newhead' %>
    <% end %>
    
  </head>

  <body>
    <% if current_user %>
      <%= render 'shared/accountNavbar' %>
    <% else %>
      <%= render 'shared/newnavbar' %>
    <% end %>

    <%= render 'shared/notices' %>

    <%= yield %>

    <% if current_user %>
      <%= render 'shared/accountfooter' %>
    <% else %>
      <%= render 'shared/newfooter' %>
    <% end %>
    
  </body>
  <script>
    $(".notice-alert").delay(5000).slideUp(200, function() {
        $(this).alert('close');
    });
    $('body').on('click', '.close_alert', function(){
        $(".alerts").slideUp(100); 
    })
    $('body').on('click', '.close', function () {
        $(this).parents('.modal').modal('hide')
    });
  </script>
</html>
