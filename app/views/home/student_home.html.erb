<h1>Student</h1>
<p class="lead">Use this for your student home page</p>

<br>

<h5>List of verified teachers</h5>

    <table class="table table-striped table-inverse table-responsive">
        <thead class="thead-inverse">
            <tr>
                <th>name</th>
                <th>Bio</th>
                <th>Province</th>
            </tr>
            </thead>
            <tbody>
                <% @teacher_list.each do |teacher|%>
                    <tr>
                        <td scope="row"><%= link_to teacher.name, user_path(teacher.id) %></td>
                        <td><%= teacher.bio %></td>
                        <td><%= teacher.province %></td>
                    </tr>
                <% end %>
            </tbody>
    </table>
