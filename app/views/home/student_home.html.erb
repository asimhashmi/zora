<h1>Student</h1>
<p class="lead">Use this for your student home page</p>

<%= search_form_for @q, url: 'student' do |f| %>

  <%= f.label :Name %>
  <%= f.search_field :first_name_or_last_name_cont, placeholder: 'search First name, last name... ' %>
  <%#= f.select :schedules_county_matches_all, Schedule.counties.map { |r| [r[0], r[1].to_i] }, include_blank: true %>
  <%= f.select :roles_id_eq, Role.pluck(:name, :id).map{|role, a|[role.humanize,a]},
        {:include_blank => 'Select role'} %>
  <%= f.select :province_eq, User.provinces.to_a.map { |w| [w[0].humanize, w[1]] },
        {:include_blank => 'Select province'} %>


  <%= f.submit %>
<% end %>

<% form_tag student_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
