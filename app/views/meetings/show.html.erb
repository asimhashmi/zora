<!-- Page header-->
<section class="container pt-5 mt-5">
  <!-- Breadcrumb-->
  <nav class="mb-3 pt-md-3" aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "home", root_path%></li>
      <li class="breadcrumb-item">Meetings</li>
      <li class="breadcrumb-item active" aria-current="page"><%= @meeting.title %></li>
    </ol>
  </nav>
  

<!-- Post content-->
<section class="container mb-5 pb-1">
  <div class="row">
    <div class="col-md-12 mb-md-0 mb-4">
      <!-- Overview-->
      <div class="mb-4 col-md-12">
        <h3 class="h4">Title: <%= @meeting.title %></h3>
        <h6 class="mb-1" style="color: #FD5631">Purpose: <%= @meeting.purpose %></h6>
        <p class="mb-1"><%= @meeting.description %></p>
      </div>
      <!-- Property Details-->
      <div class="row mb-4 pb-md-3">
        <div class="col-lg-3">
          <h3 class="h4">Meeting Details</h3>
          <ul class="list-unstyled mb-0">
            <li><%= link_to "Join Meeting", @meeting.meeting_url %></li>
            <li>By: <%= @meeting.time %></li>
            <li>For <%= @meeting.duration %> Mins</li>


            <% if current_user.is_student? %>
              <li>
                With: <strong><%= @meeting.teacher.name%></strong>
              </li>
            <%else%>
              <li>
                With: <strong><%= @meeting.student.name%></strong>
              </li>
            <%end%>
          </ul>
        </div>
        <div class="col-lg-9">
          <%#= render 'meetings/show', meetings: @meetings %>
        </div>

          
      </div>
      <div class="d-flex flex-sm-row flex-column align-items-sm-center align-items-stretch justify-content-between">
      </div>


      <div id="meeting_model"></div>


      <!-- Post meta-->
      <div class="mb-lg-5 mb-md-4 pb-lg-2 py-4 border-top">
        <ul class="d-flex mb-4 list-unstyled fs-sm">
          <%# if current_user.is_student? %>
            <%# if @user.is_teacher? %>
              <li class="me-3 pe-3 border-end"><b><%#= link_to "Hire Tutor", new_hire_path(student_id: current_user.id, teacher_id: @user.id), class:"no-underline" %></b></li>
            <%# end %>
          <%# end %>                
          <li class="me-3 pe-3 border-end"><b><%#= link_to "Schedule a Meeting", new_meeting_path(student_id: current_user.id, teacher_id: @user.id), remote: true, class:"no-underline" %></b></li>
          <li class="me-3 pe-3"><b><%#= link_to "Send Message", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: "post", class:"no-underline"%> </b></li>
        </ul>
      </div>
      
    </div>
</section>






















