<%= form_tag("/hires", method: "post", id: "payment-form") do %>
        <section>
          <label for="grade">
            <span class="input-label">Grade</span>
            <div class="input-wrapper amount-wrapper">
              <input  name="grade" type="text" placeholder="A" required>
            </div>
          </label>
          <label for="subject">
            <span class="input-label">Subject</span>
            <div class="input-wrapper amount-wrapper">
              <input name="subject" type="text" placeholder="Math" required>
            </div>
          </label>

          <label for="amount">
            <span class="input-label">Price per Sesssion</span>
            <div class="input-wrapper amount-wrapper">
              <input type="number" name="price" type="tel" min="1" required>
            </div>
          </label>

          <label for="amount">
            <span class="input-label">Sesssions per Week</span>
            <div class="input-wrapper amount-wrapper">
              <input type="number" name="number_of_session" type="tel" min="1" required>
            </div>
          </label>

          <label for="amount">
            <span class="input-label">Duration</span>
            <div class="input-wrapper amount-wrapper">
              <select name="duration"><% Hire::DURATIONS.each do |option|%>
                 <option value=<%= option%>><%= option%></option>
              <% end %>
              </select>
            </div>
          </label>

          <div class="bt-drop-in-wrapper">
            <div id="bt-dropin"></div>
          </div>
        </section>
        <input type="hidden" name="hire_to_id" value= <%= params[:teacher_id]%> />
        <input type="hidden" name="hire_by_id" value=<%= params[:student_id]%> />
        <input type="hidden" id="nonce" name="nonce_id" />
        <button class="button" type="submit"><span>Test Transaction</span></button>
      <% end %>

    </div>
  </div>
</div>
<script>
  var form = document.querySelector('#payment-form');
  var client_token = "<%= Braintree::ClientToken.generate %>";

  dropin.create({
    authorization: client_token,
    container: '#bt-dropin',
    paypal: {
          flow: 'checkout',
          amount: '10.00',
          currency: 'USD'
        }
    }, function (createErr, instance) {
    form.addEventListener('submit', function (event) {
      event.preventDefault();

      instance.requestPaymentMethod(function (err, payload) {
        if (err) {
          console.log('Error', err);
          return;
        }

        // Add the nonce to the form and submit
        document.querySelector('#nonce').value = payload.nonce;
        form.submit();
      });
    });
  });
</script>
