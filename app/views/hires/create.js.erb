<% if @hire.errors.any? %>
$('#error_messages').html(`<button type="button" class=" btn close_alert" data-dismiss="alerts">&times;</button>
                            <ul>
                              <% @hire.errors.each do |field, message|%>
                                <li><strong><%= field.to_s.humanize %> : </strong><%= message %></li>
                              <% end %>
                            </ul>`)
$('#error_messages').prop('hidden', false)
$(".alerts").slideDown(100);
<% end %>