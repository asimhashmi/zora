<!-- Review Modal-->
<div class="modal fade" id="modal-review" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header d-block position-relative border-0 pb-0 px-sm-5 px-4">
        <h3 class="modal-title mt-4 text-center">Leave a review</h3>
        <button class="btn-close position-absolute top-0 end-0 mt-3 me-3" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body px-sm-5 px-4">
        <%= form_for Rating.new, url: { controller: 'ratings', action: :create} do |f| %>
          <% @ratee = params[:id]   %>
          <%= f.hidden_field :ratee, value: @ratee  %>
          <div class="mb-3">
            <label class="form-label" for="review-rating">Rating <span class='text-danger'>*</span></label>
            <select class="form-control form-select" id="rating[stars]" name="rating[stars]" required>
              <option value="" selected disabled hidden>Choose rating</option>
              <option value="5">5 stars</option>
              <option value="4">4 stars</option>
              <option value="3">3 stars</option>
              <option value="2">2 stars</option>
              <option value="1">1 star</option>
            </select>
            <div class="invalid-feedback">Please rate the property.</div>
          </div>
          <div class="mb-4">
            <label class="form-label" for="review-text">Review <span class='text-danger'>*</span></label>
            <%= f.text_area :message, class: 'form-control', size: "70x5", placeholder: 'Your review message' %>
            <div class="invalid-feedback">Please write your review.</div>
          </div>
          <%= f.submit 'Submit a review', class: 'btn btn-primary d-block w-100 mb-4' %>
        <% end  %>
      </div>
    </div>
  </div>
</div>
<!-- Reviews-->
<div class="mb-4 pb-4 border-bottom">
  <% @user_reviews = User.find(params[:id]) %>
  <% @user_reviews = @user_reviews.ratings %>
  <h3 class="h4 pb-3"><i class="fi-star-filled mt-n1 me-2 lead align-middle text-warning"></i> <%= @total_rating %> ( <%=  @user_reviews.size  %> reviews )</h3>
  <div class="d-flex align-items-center ms-sm-4">
    <label class="me-2 pe-1 text-nowrap" for="reviews-sorting"><i class="fi-arrows-sort text-muted mt-n1 me-2"></i>Sort by:</label>
    <select class="form-select" id="reviews-sorting">
      <option>Newest</option>
      <option>Oldest</option>
      <option>Popular</option>
      <option>High rating</option>
      <option>Low rating</option>
    </select>
  </div>
</div>
<!-- Review-->
<% @user_reviews.each do |review|  %>
  <% @rater = User.find(review.rater_id) unless !review.rater_id  %>
  <div class="mb-4 pb-4 border-bottom">
    <div class="d-flex justify-content-between mb-3">
      <div class="d-flex align-items-center pe-2">
        <%= image_tag avatar_path(@rater, size: 40), width: 48, class: "rounded-circle" %>
        <div class="ps-2">
          <h6 class="fs-base mb-0"><%= @rater.first_name %> <%= @rater.last_name %></h6>
          <span class="star-rating">
            <% review.stars.times do   %>
              <i class="star-rating-icon fi-star-filled active"></i>
            <% end  %>
          </span>
        </div>
      </div>
      <span class="text-muted fs-sm">Jan 17, 2021</span>
    </div>
    <p> <%= review.message %> </p>
    <div class="d-flex align-items-center">
      <button class="btn-like" type="button"><i class="fi-like"></i><span>(3)</span></button>
      <div class="border-end me-1">&nbsp;</div>
      <button class="btn-dislike" type="button"><i class="fi-dislike"></i><span>(0)</span></button>
    </div>
  </div>
<% end  %>
<!-- Pagination-->
<nav class="mt-2 mb-4" aria-label="Reviews pagination">
  <ul class="pagination">
    <li class="page-item d-sm-none"><span class="page-link page-link-static">1 / 5</span></li>
    <li class="page-item active d-none d-sm-block" aria-current="page"><span class="page-link">1<span class="visually-hidden">(current)</span></span></li>
    <li class="page-item d-none d-sm-block"><a class="page-link" href="#">2</a></li>
    <li class="page-item d-none d-sm-block"><a class="page-link" href="#">3</a></li>
    <li class="page-item d-none d-sm-block">...</li>
    <li class="page-item d-none d-sm-block"><a class="page-link" href="#">8</a></li>
    <li class="page-item"><a class="page-link" href="#" aria-label="Next"><i class="fi-chevron-right"></i></a></li>
  </ul>
</nav>
