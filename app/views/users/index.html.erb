<% form_tag users_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>





<h1>All Users</h1>
<p class="lead">Use this for your users page</p>

<br>

<h5>List of verified teachers</h5>

    <table class="table table-striped table-inverse table-responsive">
        <thead class="thead-inverse">
            <tr>
                <th>name</th>
                <th>Bio</th>
                <th>Province</th>
            </tr>
            </thead>
            <tbody>
                <% @user.each do |list|%>
                    <tr>
                        <td scope="row"><%= link_to list.name, list %></td>
                        <td><%= list.bio %></td>
                        <td><%= list.province %></td>
                    </tr>
                <% end %>
            </tbody>
    </table>
